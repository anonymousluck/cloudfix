{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "kms:Decrypt"
      ],
      "Resource": "arn:aws:kms:us-west-2::key/*",
      "Effect": "Allow",
      "Sid": "statement1"
    },
    {
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:DescribeParameters"
      ],
      "Resource": "arn:aws:ssm:us-west-2::parameter/*",
      "Effect": "Allow",
      "Sid": "statement2"
    }
  ]
}