{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "cloudformation:ListStacks",
        "cloudformation:CreateStack",
        "cloudformation:CreateChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:ExecuteChangeSet",
        "cloudformation:DeleteChangeSet",
        "cloudformation:DescribeStacks"
      ],
      "Resource": "*",
      "Sid": "statement1"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:GetRole",
        "iam:DeleteRolePolicy",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:PutRolePolicy",
        "iam:GetRolePolicy"
      ],
      "Resource": "*",
      "Sid": "statement2"
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "iot.amazonaws.com"
        }
      },
      "Sid": "statement3"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:CreateRoleAlias",
        "iot:DeleteRoleAlias",
        "iot:DescribeRoleAlias",
        "iot:UpdateRoleAlias"
      ],
      "Resource": "*",
      "Sid": "statement4"
    }
  ]
}