{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Deny",
      "Action": [
        "s3:AcceptDataGrant"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalOrgID": "ORGID"
        },
        "StringNotEquals": {
          "aws:PrincipalAccount": "ACCOUNTID"
        }
      },
      "Sid": "statement1"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:AcceptDataGrant"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalAccount": "ACCOUNTID"
        }
      },
      "Sid": "statement2"
    }
  ]
}